---
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo.ico">
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="stylesheet" type="text/css" href="/font/font.css" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <script defer src="https://umami.vaatigames.ovh/script.js" data-website-id="5ba581d6-12c7-45df-9ef0-ec7d7e6ba0d"></script>
    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="https://wiki.democraft.fr" property="og:url" />
    <meta content="https://wiki.democraft.fr/logo.png" property="og:image" />
    <meta content="#43B581" data-react-helmet="true" name="theme-color" />
    <ClientRouter />
    <style>
      body {
        font-family: "Poppins", "FluentEmoji", sans-serif;
        transition: all 0.25s cubic-bezier(0.427, 0.073, 0.105, 0.997) 0.1s;
      }
    </style></head
  >