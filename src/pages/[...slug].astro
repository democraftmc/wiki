---
import { getCollection, getEntry } from "astro:content";
import DocsLayout from "../layouts/docs.astro";

// [...slug].astro
export async function getStaticPaths() {
  const docs = await getCollection("wiki");
  const publishedDocs = docs.filter((doc) => !doc.data.draft).filter((doc) => !doc.slug.includes('__'));
  return publishedDocs.map((doc) => ({
    params: { slug: doc.slug, title: doc.data.title },
    props: { doc },
  }));
}

const { doc } = Astro.props;
//console.log("html:", html);
---

<DocsLayout post={doc}>
  <h1>{doc.data.title}</h1>
  <div set:html={doc.render()} />
</DocsLayout>